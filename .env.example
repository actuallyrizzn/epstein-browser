# Epstein Documents Browser - Environment Configuration
# Copy this file to .env and update the values for your environment

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_PATH=images.db

# Data Directory
DATA_DIR=data

# Server Configuration
HOST=127.0.0.1
PORT=8080

# Security Settings
DEBUG=False
TESTING=False

# Optional: Logging Level
LOG_LEVEL=INFO

# AI/LLM Configuration
VENICE_API_KEY=your-venice-ai-api-key-here

# Venice AI Configuration (Optional)
VENICE_BASE_URL=https://api.venice.ai/api/v1
VENICE_DEFAULT_MODEL=gpt-4
VENICE_TIMEOUT=30
VENICE_MAX_RETRIES=3
VENICE_RETRY_DELAY=1